@model StokTakipMVC.Modals.Entity.TBLKATEGORILER
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(m => m.KATEGORIID, new { @class = "form-control" })

        <br />
        @Html.Label("KATEGORİ AD:")
        @Html.TextBoxFor(m => m.KATEGORIAD, new { @class = "form-control" })
        <br />

    </div>
    <a href="/Kategori/Index/" class="btn btn-danger">İptal</a>
    <button class="btn btn-primary">Güncelle</button>
}

