@using StokTakipMVC.Modals.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";


}

<div class="card">
    <div class="card-header">
        <h2>ÜRÜNLER</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>ID</th>
                    <th>ÜRÜN AD</th>
                    <th>MARKA</th>
                    <th>KATEGORİ</th>
                    <th>FİYAT</th>
                    <th>STOK</th>
                    <th>İŞLEMLER</th>
                </tr>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.URUNID</td>
                        <td>@x.URUNAD</td>
                        <td>@x.MARKA</td>
                        <td>@(x.TBLKATEGORILER != null ? x.TBLKATEGORILER.KATEGORIAD : "Kategori Bulunamadı")</td>
                        <td>@x.FIYAT ₺</td>
                        <td>@x.STOK</td>
                        <td>
                            @Html.ActionLink("SİL", "Sil", new { id = x.URUNID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten silmek istiyor musunuz?')" })
                            <a href="/Urun/UrunGetir/@x.URUNID" class="btn btn-success">GÜNCELLE</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="card-footer">
        <a href="/Urun/NewUrun/" class="btn btn-primary">Yeni Ürün Ekle</a>
    </div>
</div>



